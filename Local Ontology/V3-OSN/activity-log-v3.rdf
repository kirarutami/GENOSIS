<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:owl="http://www.w3.org/2002/07/owl#"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema#">

    <!-- ActivityLog Class -->
    <owl:Class rdf:about="#ActivityLog">
        <rdfs:comment>Represents a record of activities performed by a user.</rdfs:comment>
    </owl:Class>

    <owl:ObjectProperty rdf:about="#likesActivities">
        <rdfs:domain rdf:resource="#User"/>
        <rdfs:range rdf:resource="#ActivityLog"/>
        <rdfs:comment>Records activities related to liking content.</rdfs:comment>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#FunctionalProperty"/>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#commentsActivities">
        <rdfs:domain rdf:resource="#User"/>
        <rdfs:range rdf:resource="#ActivityLog"/>
        <rdfs:comment>Records activities related to commenting on content.</rdfs:comment>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#FunctionalProperty"/>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#tagsActivities">
        <rdfs:domain rdf:resource="#User"/>
        <rdfs:range rdf:resource="#ActivityLog"/>
        <rdfs:comment>Records activities related to tagging others.</rdfs:comment>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#FunctionalProperty"/>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#reviewsActivities">
        <rdfs:domain rdf:resource="#User"/>
        <rdfs:range rdf:resource="#ActivityLog"/>
        <rdfs:comment>Records activities related to reviewing content.</rdfs:comment>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#FunctionalProperty"/>
    </owl:ObjectProperty>

    <owl:DatatypeProperty rdf:about="#hasActivityTimestamp">
        <rdfs:domain rdf:resource="#ActivityLog"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#dateTime"/>
        <rdfs:comment>Timestamp indicating when the activity was performed.</rdfs:comment>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="#hasActivityType">
        <rdfs:domain rdf:resource="#ActivityLog"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:comment>Type of activity performed, e.g., like, comment, tag, review.</rdfs:comment>
    </owl:DatatypeProperty>

    <owl:ObjectProperty rdf:about="#downloadsInformation">
        <rdfs:domain rdf:resource="#User"/>
        <rdfs:range rdf:resource="#ActivityLog"/>
        <rdfs:comment>Represents user activity for downloading their account information.</rdfs:comment>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#FunctionalProperty"/>
    </owl:ObjectProperty>

    <!-- Logout Class -->
    <owl:Class rdf:about="#Logout">
        <rdfs:comment>Represents the action of a user logging out of the system.</rdfs:comment>
    </owl:Class>

    <owl:ObjectProperty rdf:about="#LogoutAction">
        <rdfs:domain rdf:resource="#User"/>
        <rdfs:range rdf:resource="#Logout"/>
        <rdfs:comment>Links a user to the logout action performed.</rdfs:comment>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#FunctionalProperty"/>
    </owl:ObjectProperty>

    <owl:DatatypeProperty rdf:about="#hasLogoutTimestamp">
        <rdfs:domain rdf:resource="#Logout"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#dateTime"/>
        <rdfs:comment>Timestamp indicating when the logout occurred.</rdfs:comment>
    </owl:DatatypeProperty>

</rdf:RDF>
