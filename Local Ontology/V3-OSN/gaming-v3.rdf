<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:owl="http://www.w3.org/2002/07/owl#"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema#">

    <!-- Gaming Class -->
    <owl:Class rdf:about="#Gaming">
        <rdfs:comment>Represents gaming-related actions and player information.</rdfs:comment>
    </owl:Class>

    <!-- PlayGames Sub-class -->
    <owl:Class rdf:about="#PlayGames">
        <rdfs:subClassOf rdf:resource="#Gaming"/>
        <rdfs:comment>Represents game-playing activities.</rdfs:comment>
    </owl:Class>

    <!-- Object Properties for PlayGames -->
    <owl:ObjectProperty rdf:about="#savesGame">
        <rdfs:domain rdf:resource="#User"/>
        <rdfs:range rdf:resource="#PlayGames"/>
        <rdfs:comment>Links a user to saved games.</rdfs:comment>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#sharesGame">
        <rdfs:domain rdf:resource="#User"/>
        <rdfs:range rdf:resource="#PlayGames"/>
        <rdfs:comment>Links a user to shared games.</rdfs:comment>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#connectsGame">
        <rdfs:domain rdf:resource="#User"/>
        <rdfs:range rdf:resource="#PlayGames"/>
        <rdfs:comment>Links a user to connected games or gaming notifications.</rdfs:comment>
    </owl:ObjectProperty>

    <!-- Data Properties for PlayGames -->
    <owl:DatatypeProperty rdf:about="#hasGameSaveTimestamp">
        <rdfs:domain rdf:resource="#PlayGames"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#dateTime"/>
        <rdfs:comment>The timestamp when the game was saved.</rdfs:comment>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#FunctionalProperty"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="#hasGameSharePlatform">
        <rdfs:domain rdf:resource="#PlayGames"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:comment>The platform where the game was shared (e.g., Facebook, Instagram).</rdfs:comment>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="#hasGameConnectionType">
        <rdfs:domain rdf:resource="#PlayGames"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:comment>The type of connection used for gaming (e.g., Wi-Fi, Mobile Data).</rdfs:comment>
    </owl:DatatypeProperty>

    <!-- PlayerInfo Sub-class -->
    <owl:Class rdf:about="#PlayerInfo">
        <rdfs:subClassOf rdf:resource="#Gaming"/>
        <rdfs:comment>Represents player-related details.</rdfs:comment>
    </owl:Class>

    <owl:DatatypeProperty rdf:about="#hasPlayerName">
        <rdfs:domain rdf:resource="#PlayerInfo"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:comment>The name of the player.</rdfs:comment>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="#hasPlayerAvatar">
        <rdfs:domain rdf:resource="#PlayerInfo"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#anyURI"/>
        <rdfs:comment>The avatar of the player (URL).</rdfs:comment>
    </owl:DatatypeProperty>

</rdf:RDF>
